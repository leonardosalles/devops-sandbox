{
  "name": "infra-cdk",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:lambdas": "tsc --project ./lambda/tsconfig.json",
    "build:backend": "cd ../../apps/backend && pnpm run build",
    "deploy": "pnpm run build:lambdas && pnpm run build:backend && cdk deploy --all --require-approval never",
    "destroy": "cdk destroy --force"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.99.0",
    "constructs": "^10.3.0",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "aws-cdk": "^2.99.0",
    "typescript": "^5.0.0"
  }
}
